/* pages/consult/consult.wxss */
.consult-block{
  height: 100%;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 5% 20rpx 5%;
  margin-bottom: 20rpx;
}
.consult-title{
  color: black;
  font-weight: bold;
  margin-top: 30rpx;
}
.consult-text-preview{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  padding-top: 20rpx;
}
.consult-text-fullpage{
  padding-top: 20rpx;
}