.wxSearch{
  position: absolute;
  top: 43px;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(0, 0, 0, 0.2);
}
.wxSearchInner{
  background-color: #fff;
}
.wxSearch-section{
  background-color: #fff;
  padding-left: 11px;
  border: 1px #eee solid;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.wxSearch-input{
  flex: 8; 
  background-color: white;
  padding: 5px 10px;
}
.wxSearch-button{
  flex: 1;
  border: none !important;
  color: #78D1E9 !important;
}
.wxSearchTitle{
  display: block;
  padding: 10px 5px 10px 5px;
  font-size: 12px;
  text-align: center;
}
.wxSearchMindKeyItem{
  display: flex;
  padding: 10px 15px;
  border-bottom: 1px solid #eee;
}
.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 15px 0 15px;
}
.wxSearchKeyItem{
  font-size: 28rpx; 
  color: #78D1E9; 
  font-family: "微软雅黑";
  text-align: center;
  margin: 5px;
  padding: 10px 20px;
  border: 1px solid #eee;
  border-radius: 23px;
  border-color: #78D1E9;
}
.wxSearchKeyItem-clicked{
  font-size: 28rpx; 
  color: white; 
  font-family: "微软雅黑";
  background: #78D1E9;
  text-align: center;
  margin: 5px;
  padding: 10px 20px;
  border: 1px solid #eee;
  border-radius: 23px;
  border-color: #78D1E9;
}
.wxSearchHistoryItem{
  display: flex;
  padding: 10px 15px;
  border-bottom: 1px solid #eee;
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 14px;
}
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 12px;
  text-align: center;
  padding: 3px 5px;
  border: 1px solid #eee;
  border-radius: 5px;
}
.wxSearchHistoryEmpty{
  text-align: center;
  height: 50px;
  line-height: 50px;
  font-size: 12px;
}
.wxSearchDeleteAllBtn{
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 12px;
}