/*概况信息区域样式*/
.outline-area{
  height: 100%;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-end;
  margin-top: 20rpx;
}
.outline-block{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.outline-image{
  width: 130rpx;
  height: 130rpx;
  padding-bottom: 10rpx;
}

/*发展规划区域样式*/
.plan-area{
  height: 100%;
  background: #f5f5f5;
  padding-top: 20rpx;
}
.plan-title{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.plan-item{
  height: 80rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom-style: solid;
  border-width: medium;
  border-color: #f5f5f5;
}
.map-section{
  height: 700rpx;
  background: white;
  position: relative;
  /*display: flex;*/
  /*flex-direction: column;*/
  /*justify-content: center;*/
  /*align-items: center;*/
}
.map{
  z-index: 1;
  position: absolute;
}
.map-finger{
  z-index: 3;
  float: right;
  margin-top: 180rpx;
  margin-right: 100rpx;
}

/*投资专题区域样式*/
.special-area{
  height: 100%;
  background: #f5f5f5;
  padding-top: 20rpx;
}
.special-title{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.special-project-section{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.special-project-block{
  height: 100%;
}
.special-project-image{
  width: 330rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

/*重点项目区域样式*/
.key-area{
  height: 100%;
  background: #f5f5f5;
  padding-bottom: 10rpx;
}
.key-title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.key-project-section{
  display: flex;
  flex-wrap: nowrap;
  margin-left: 30rpx;
  padding-bottom: 10rpx;
}
.key-project-block{
  height: 100%；
}
.key-project-image{
  width: 600rpx;
  height: 340rpx;
  margin-right: 30rpx;
}

/*投资咨询区域样式*/
.consult-area{
  height: 100%;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.consult-title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.consult-item{
  height: 80rpx;
  display: flex;
  flex-direction: row;
