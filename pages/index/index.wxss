/*主页顶部区域样式（包括logo、搜索样式）*/
.banner-area{
  width: 100%;
  height: 600rpx;
  background-image: url("https://image.ibb.co/gokkhk/home_banner.png");
  background-size: 100%;
}
.logo-section{
  height: 435rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50rpx;
}
.logo-text{
  color: white;
  font-size: 45rpx;
  padding-top: 40rpx;
}
.search-section{
  width: 90%;
  height: 80rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 5%;
  border-radius: 40rpx;
}
.search-text{
  color: #78D1E9;
  font-family: "微软雅黑";
}

